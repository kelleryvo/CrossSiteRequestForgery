<html>
<% include partials/head.ejs %>
<body>
    <% include partials/navigation.ejs %>
    <div class='container'>
      <div class="jumbotron">
        <h1>StreamDream</h1>
        <p>Your source for online video streaming.</p>
        <p><a href="/library" class="btn btn-primary btn-lg">To the Library</a></p>
      </div>

      <%- errors %>

      <div id='csrf'>
        <form class="form-signin" method="POST">
          <input type="hidden" name="_csrf" value="<%- csrfToken %>">
          <br>
          <h2 class="form-signin-heading">Change Password</h2>
          <label for="password" class="sr-only">New Password</label>
          <input type="password" id="password" name = "password" class="form-control btn-margin" placeholder="New Password" required autofocus>

          <label for="password_repeat" class="sr-only">Repeat Password</label>
          <input type="password" id="password_repeat" name = "password_repeat" class="form-control btn-margin" placeholder="Repeat Password" required>
          <br>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Change Password</button>
        </form>
      </div>

    </div>
</body>
</html>
